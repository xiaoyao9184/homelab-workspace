version: "3.8"

networks:
  xui:

volumes:
  etc:
    name: xui-etc
  cert:
    name: xui-cert

services:
  xui:
    image: enwaiax/x-ui:latest
    env_file: external_env-all.env
    volumes:
      - cert:/root/cert/
      - etc:/etc/x-ui
    networks:
      - xui
    ports:
      - 54321:54321
{% if VARS.PORTS | length > 0 %}
      {{ VARS.PORTS | to_nice_yaml(indent=2) | trim | indent(6) }}
{% endif %}
    # network_mode: "host"
    container_name: xui
    restart: always
